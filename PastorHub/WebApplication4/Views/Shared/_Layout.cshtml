@using Microsoft.AspNet.Identity;
@using WebApplication4.Models;
@{
    ApplicationDbContext context = new ApplicationDbContext();
    ApplicationUser user = context.Users.Find(User.Identity.GetUserId());
}

    <!DOCTYPE html>
    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

        <style>

            .jumbotron {
                box-shadow: 0 20px 20px rgba(0,0,0,0.5);
                border-radius: 0px;
            }

            .navigation-item {
                margin-bottom: 10px;
            }

            body {
                background: #c7b39b url(https://lh3.googleusercontent.com/proxy/31FWhKd5s6fYw6bUuuyBQ34oYCuaVDkGwKqdHCT5JTx9nKfonyEgHQCCMSyCPSD8Jk-U7Ur7g2CyfWF8OseSmupy5VTFNk8);
            }
        </style>

    </head>
    <body>
        <nav class="navbar">
            @using (Html.BeginForm("Index", "Search", FormMethod.Post, new {@class = "form-inline mr-auto ml-auto" }))
            {
                <input class="form-control mr-sm-2" type="search" placeholder="Search" name="SearchText" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            }
        </nav>

        <div class=" container-fluid">

            <div class="col-2 mt-5 position-fixed row ">
              
                <ul style="list-style-type: none;" class="jumbotron">
                    @Html.Partial("Avatar")
                    <li class="navigation-item"><a href="~/Home/Index" class="col-12 btn btn-outline-info">Home</a></li>
                    @Html.Partial("PastorFuncionality")
                    @Html.Partial("_LoginPartial")
                </ul>

            </div>

            <div class="container col-8 mt-5">
                @RenderBody()
            </div>
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - мое приложение ASP.NET</p>
        </footer>

        @Scripts.Render("~/scripts/jquery-3.5.1.js")
        @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
