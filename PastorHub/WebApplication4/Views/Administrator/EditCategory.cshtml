@model WebApplication4.Models.Category
@using (Html.BeginForm("EditCategory", "Administrator", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Name, "Category name")
            <br />
            @Html.EditorFor(m => m.Name)
        </p>
        <p><input type="submit" value="OK" /></p>
    </fieldset>
}
<a href="/Administrator/Categories">Cancel</a>