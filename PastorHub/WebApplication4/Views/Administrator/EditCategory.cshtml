@model WebApplication4.Models.Category

    <div class="jumbotron">
        @using (Html.BeginForm("EditCategory", "Administrator", FormMethod.Post))
        {
        <fieldset>
            @Html.HiddenFor(m => m.Id)
            <p>
                @Html.LabelFor(m => m.Name, "Category name", htmlAttributes: new { @class = "control-label col-md-2" })
                <br />
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            </p>
            <p class="d-lg-inline-block"><input class="mr-2 btn btn-outline-success" type="submit" value="OK" /><a href="/Administrator/Categories" class="btn btn-outline-warning">Cancel</a></p>

        </fieldset>
        }

    </div>

