@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebApplication4.Models.Category

    <div class="jumbotron">
        <h2>Are you sure you want to delete this category?</h2>
        <dl>
            <dt>Name</dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>

        @using (Html.BeginForm(new { @class = "form-inline" }))
        {
            <input type="submit" class="btn btn-outline-danger" value="Yes" />
            <a href="/Administrator/Categories" class="btn ml-3 btn-outline-success">No</a>
        }

    </div>

